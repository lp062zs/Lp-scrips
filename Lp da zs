        Enabled = false,
        Invite = "noinvite",
        RememberJoins = true
    }
})

-- Aba principal 
local MainTab = Window:CreateTab("Coleta Autom√°tica", 13014546637)
MainTab:CreateSection("Configura√ß√µes de Coleta")

-- Tabela de itens colet√°veis com √≠cones
local collectables = {
    {Name = "Itens Gerais", State = "Items", Icon = "üì¶"},
    {Name = "Ess√™ncia (XP)", State = "Essence", Icon = "‚ú®"},
    {Name = "Moedas", State = "Coin", Icon = "ü™ô"},
    {Name = "Bloodfruit", State = "Bloodfruit", Icon = "üçé"},
    {Name = "Troncos", State = "Log", Icon = "ü™µ"},
    {Name = "Madeira", State = "Wood", Icon = "ü™µ"},
    {Name = "Folhas", State = "Leaves", Icon = "üçÉ"},
    {Name = "Carv√£o", State = "Coal", Icon = "‚ö´"}
}

-- Cria os toggles dinamicamente
for _, item in ipairs(collectables) do
    MainTab:CreateToggle({
        Name = item.Icon.." "..item.Name,
        CurrentValue = States["AutoPickup"..item.State],
        Flag = "AutoPickup"..item.State,
        Callback = function(Value)
            States["AutoPickup"..item.State] = Value
        end
    })
end

-- Se√ß√£o de utilit√°rios
MainTab:CreateSection("Configura√ß√µes do Sistema")
MainTab:CreateToggle({
    Name = "üõ°Ô∏è Sistema Anti-AFK",
    CurrentValue = true,
    Flag = "AntiAFK",
    Callback = function(Value)
        if Value then 
            antiAfk()
            Rayfield:Notify({
                Title = "PROTE√á√ÉO ATIVADA",
                Content = "Sistema Anti-AFK habilitado",
                Duration = 3,
                Image = 4483362458
            })
        end
    end
})

-- Bot√£o para coletar tudo rapidamente
MainTab:CreateButton({
    Name = "‚ö° Coletar Tudo Agora (Raio-X)",
    Callback = function()
        for _, state in pairs(States) do
            state = true
        end
        task.wait(5)  -- Coleta por 5 segundos
        for _, state in pairs(States) do
            state = false
        end
    end
})

-- Aba de informa√ß√µes
local InfoTab = Window:CreateTab("Informa√ß√µes", 773399514)
